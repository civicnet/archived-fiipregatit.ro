          {{# sections }}
            <div
              class="tab-pane fade {{# is_active }}show{{/ is_active }} {{ is_active }}"
              id="{{ slug }}"
              role="tabpanel"
              aria-labelledby="{{ slug }}-tab">
              <h2>{{ name }}</h2>
              {{# is_partner_page }}
                <div class="row descriere-toti-partenerii">
                  {{ descriere_parteneri }}
                </div>
                {{# parteneri }}
                  <div class="row despre-row-partener">
                    <div class="col-lg-4 col-sm-12">
                      <img src="{{ logo_partener }}" class="despre-logo-partener" />
                    </div>
                    <div class="col-lg-8 col-sm-12">
                      {{ descriere_partener }}
                    </div>
                  </div>
                {{/ parteneri }}
              {{/ is_partner_page }}
              {{^ is_partner_page }}
                {{& content}}
              {{/ is_partner_page }}
            </div>
          {{/ sections }}
        </div>
      </div>
      <div class="col col-lg-3 col-md-12 guide-sidebar d-none d-lg-block">
        <h3>
          AflÄƒ mai multe
        </h3>
        <div
          class="nav flex-column nav-pills"
          id="custom-menu-tab"
          role="tablist"
          aria-orientation="vertical">
            {{# sections }}
              <a
                class="nav-link {{ is_active }}"
                id="{{ slug }}-tab"
                data-toggle="pill"
                href="#{{ slug }}"
                role="tab"
                aria-controls="{{ slug }}"
                aria-selected="true">
                <i class="fas fa-chevron-right"></i>
                {{ name }}
              </a>
            {{/ sections }}
        </div>
      </div>
    </div>
  </div>
</div>
