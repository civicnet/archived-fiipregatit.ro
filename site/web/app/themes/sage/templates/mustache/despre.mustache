    </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" role="tablist">
      <div
        class="nav flex-column nav-pills"
        id="custom-menu-tab-mobile"
        role="tablist"
        aria-orientation="vertical">
          {{# sections }}
            <a
              class="nav-link {{ is_active }}"
              id="{{ slug }}-tab-mobile"
              data-toggle="pill"
              href="#{{ slug }}"
              role="tab"
              aria-controls="{{ slug }}"
              aria-selected="true">
